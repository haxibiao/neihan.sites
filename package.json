{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch-poll": "npm run watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "css": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js --env.css",
        "build-HotCatoryCount": "cd nova-components/HotCatoryCount && npm run dev",
        "build-HotCatoryCount-prod": "cd nova-components/HotCatoryCount && npm run prod",
        "build-CategoryCount": "cd nova-components/CategoryCount && npm run dev",
        "build-CategoryCount-prod": "cd nova-components/CategoryCount && npm run prod",
        "build-CategoryLikeCount": "cd nova-components/CategoryLikeCount && npm run dev",
        "build-CategoryLikeCount-prod": "cd nova-components/CategoryLikeCount && npm run prod"
    },
    "devDependencies": {
        "axios": "^0.15.3",
        "bootstrap-sass": "^3.3.7",
        "browser-sync": "^2.18.13",
        "browser-sync-webpack-plugin": "^1.2.0",
        "cross-env": "^3.2.3",
        "jquery": "^3.1.1",
        "laravel-mix": "^1.0",
        "lodash": "^4.17.4",
        "vue": "^2.5.17",
        "vue-template-compiler": "^2.5.17"
    },
    "dependencies": {
        "simditor": "2.3.6",
        "simditor-dropzone": "2.0.1",
        "bootstrap-tagsinput": "^0.7.1",
        "node-sass": "^4.7.2",
        "vue-apollo": "^2.1.0-beta.8",
        "vue-multiselect": "^2.0.8",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1"
    }
}