{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "bugsnag/bugsnag-laravel": "^2.0",
        "doctrine/dbal": "^2.5",
        "intervention/image": "^2.3",
        "jenssegers/agent": "^2.5",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "lokielse/omnipay-alipay": "^2.0",
        "overtrue/laravel-wechat": "~3.0",
        "folklore/graphql": "~1.0.0",
        "overtrue/pinyin": "~3.0",
        "roumen/sitemap": "^2.7"
    },
    "require-dev": {
        "laravel/tinker": "~1.0",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "laravelcollective/remote": "^5.4",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": ["database", "ops"],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": ["php -r \"file_exists('.env') || copy('.env.example', '.env');\""],
        "post-create-project-cmd": ["php artisan key:generate"],
        "post-install-cmd": ["Illuminate\\Foundation\\ComposerScripts::postInstall", "php artisan optimize"],
        "post-autoload-dump": ["Illuminate\\Foundation\\ComposerScripts::postAutoloadDump", "@php artisan package:discover"],
        "post-update-cmd": ["Illuminate\\Foundation\\ComposerScripts::postUpdate", "php artisan optimize"]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
